---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/astro/PageHero.astro";
import Card from "../../components/astro/Card.astro";
import { services } from "../../data/services.js";

const BASE = import.meta.env.BASE_URL;

// Deployment countries (same as slug page)
const corridors = ["Jordan", "Kuwait", "Saudi Arabia", "Lebanon"];
---

<BaseLayout 
  title="Recruitment & Deployment Services | MELI"
  description="International recruitment and foreign employment services across Jordan, Kuwait, Saudi Arabia, and Lebanon."
>
  <PageHero
    badge="Our Services"
    title="Recruitment & Deployment Services"
    subtitle="Practical, compliant recruitment support for employers and qualified candidates."
    ctaHref={`${BASE}contact/`}
    ctaLabel="Start a Request"
  />

  <section class="bg-slate-50">
    <div class="container mx-auto px-4 py-12 md:py-16 lg:py-20">
      
      <!-- Section Header -->
      <div class="max-w-3xl">
        <h2 class="text-2xl md:text-3xl font-extrabold tracking-tight text-brand-navy">
          Service catalog
        </h2>
        <p class="mt-3 text-base text-slate-600">
          Select a service to explore workflows, required documents, and next steps.
        </p>
      </div>

      <!-- Active Corridors -->
      <div class="mt-8 rounded-3xl bg-white p-6 ring-1 ring-slate-200 shadow-soft">
        <h3 class="text-sm font-extrabold text-brand-navy uppercase tracking-wide">
          Active deployment corridors
        </h3>
        <p class="mt-2 text-sm text-slate-600">
          We currently support recruitment and deployment to the following countries:
        </p>

        <div class="mt-4 flex flex-wrap gap-2">
          {corridors.map((c) => (
            <span class="rounded-full bg-brand-navy/5 px-4 py-2 text-xs font-extrabold text-brand-navy ring-1 ring-slate-200">
              {c}
            </span>
          ))}
        </div>
      </div>

      <!-- Service Grid -->
      <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {services.map((s) => (
          <a 
            href={`${BASE}services/${s.slug}/`} 
            class="group no-underline block h-full focus:outline-none focus:ring-2 focus:ring-brand-gold focus:ring-offset-2 rounded-2xl"
          >
            <Card 
              eyebrow={s.category} 
              title={s.title} 
              text={s.short} 
              icon={s.icon}
            >
              <div class="mt-6 inline-flex items-center gap-2 text-sm font-bold text-brand-gold group-hover:text-brand-navy transition-colors">
                <span>View details</span>
                <span class="text-lg group-hover:translate-x-1 transition-transform duration-200">→</span>
              </div>
            </Card>
          </a>
        ))}
      </div>

      <!-- Simple Note (Reduced Content) -->
      <div class="mt-12 rounded-3xl bg-white p-6 ring-1 ring-slate-200 shadow-soft">
        <h3 class="font-extrabold text-brand-navy">Need a tailored checklist?</h3>
        <p class="mt-2 text-sm text-slate-600">
          Send your destination country, job role, and timeline. We’ll respond with required steps and documentation.
        </p>

        <div class="mt-4">
          <a 
            href={`${BASE}contact/`} 
            class="no-underline inline-flex items-center gap-2 rounded-2xl bg-brand-gold px-6 py-3 font-extrabold text-slate-900 shadow-soft hover:-translate-y-0.5 transition"
          >
            Contact Us →
          </a>
        </div>
      </div>

    </div>
  </section>
</BaseLayout>

---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { services } from "../../data/services.js";

const BASE = import.meta.env.BASE_URL;

/**
 * IMPORTANT FIX:
 * - Ensure each service has a UNIQUE slug in services.js
 * - Links from index MUST be: `${BASE}services/${s.slug}/`
 */

export async function getStaticPaths() {
  return services.map((s) => ({ params: { slug: s.slug } }));
}

const { slug } = Astro.params;
const service = services.find((s) => s.slug === slug);

// ✅ No 404 / throw: fallback to first service if slug not found (prevents crashes)
const safeService = service ?? services[0];

// Countries you told me you list on the site (keep short & clean)
const corridors =
  (safeService as any).regions?.length
    ? (safeService as any).regions
    : ["Jordan", "Kuwait", "Saudi Arabia", "Lebanon"];

// Optional image (won’t break if missing)
const HERO_IMG = `${BASE}assets/services/${safeService.slug}.jpg`;

// Reduce “enterprise” wording and remove fake compliance claims
const metaTitle = `${safeService.title} | MELI Services`;
const metaDesc = safeService.short ?? "Service details and typical steps.";
---

<BaseLayout title={metaTitle} description={metaDesc}>
  <!-- Compact hero -->
  <section class="relative overflow-hidden bg-brand-navy">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-navy via-brand-navy to-black/10"></div>
    <div class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full bg-brand-gold/10 blur-3xl"></div>
    <div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-white/5 blur-3xl"></div>

    <div class="container relative mx-auto px-4 py-10 md:py-12 lg:py-14">
      <div class="flex items-center gap-3 text-sm font-semibold">
        <a
          href={`${BASE}services/`}
          class="no-underline text-white/70 hover:text-brand-gold transition inline-flex items-center gap-2 group"
        >
          <span class="text-lg transition group-hover:-translate-x-1">←</span>
          All services
        </a>
        <span class="text-white/30">/</span>
        <span class="text-brand-gold">{safeService.category}</span>
      </div>

      <div class="mt-6 grid gap-6 lg:grid-cols-[1.2fr_0.8fr] lg:items-stretch">
        <div>
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold tracking-tight text-white">
            {safeService.title}
          </h1>
          <p class="mt-3 text-base md:text-lg text-white/80 max-w-2xl">
            {(safeService as any).subtitle || safeService.short}
          </p>

          <div class="mt-5 flex flex-wrap gap-2">
            <span class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs font-extrabold text-white ring-1 ring-white/15">
              <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
              Fast checklist
            </span>
            <span class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs font-extrabold text-white ring-1 ring-white/15">
              Destination-ready
            </span>
            <span class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs font-extrabold text-white ring-1 ring-white/15">
              Clear steps
            </span>
          </div>

          <div class="mt-6 flex flex-wrap gap-3">
            <a
              href={`${BASE}contact/?service=${safeService.slug}`}
              class="no-underline rounded-2xl bg-brand-gold px-6 py-3 font-extrabold text-slate-900 shadow-soft transition
                     hover:-translate-y-0.5 hover:opacity-95 active:translate-y-0 inline-flex items-center gap-2"
            >
              Request this service <span aria-hidden="true">→</span>
            </a>
            <a
              href={`${BASE}process/`}
              class="no-underline rounded-2xl bg-white/10 px-6 py-3 font-semibold text-white ring-1 ring-white/20 transition
                     hover:-translate-y-0.5 hover:bg-white/15 active:translate-y-0"
            >
              See process
            </a>
          </div>
        </div>

        <!-- Optional image panel -->
        <div class="hidden lg:block">
          <div class="group relative h-full overflow-hidden rounded-3xl bg-white/5 ring-1 ring-white/10">
            <img
              src={HERO_IMG}
              alt={`${safeService.title} — MELI`}
              class="h-full w-full object-cover opacity-90 transition duration-500 group-hover:scale-[1.03]"
              loading="lazy"
              decoding="async"
              onerror="this.style.display='none'"
            />
            <div class="absolute bottom-4 left-4 right-4 rounded-2xl bg-white/10 backdrop-blur p-4 ring-1 ring-white/15">
              <div class="text-xs font-extrabold text-white/90">Active corridors</div>
              <div class="mt-1 text-sm font-semibold text-white/75">
                {corridors.slice(0, 5).join(" • ")}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="relative overflow-hidden bg-slate-50">
    <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-white via-slate-50 to-slate-50"></div>
    <div class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full bg-brand-gold/10 blur-3xl"></div>
    <div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-brand-navy/10 blur-3xl"></div>

    <div class="container relative mx-auto px-4 py-12 md:py-16 lg:py-20">
      <div class="grid gap-10 lg:grid-cols-3">
        <!-- Main -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Short description (reduced) -->
          <div class="rounded-3xl bg-white p-7 ring-1 ring-slate-200 shadow-soft md:p-9">
            <h2 class="text-xl font-extrabold text-slate-900">Overview</h2>
             <p class="mt-3 text-sm md:text-base text-slate-600 leading-relaxed">
              {(safeService as any).description || (safeService as any).fullDescription || safeService.short}
            </p>
          </div>

          <!-- Highlights -->
          {safeService.highlights?.length ? (
            <div class="rounded-3xl bg-white p-7 ring-1 ring-slate-200 shadow-soft md:p-9">
              <div class="flex items-end justify-between gap-4">
                <div>
                  <h3 class="text-xl font-extrabold text-slate-900">What you get</h3>
                  <p class="mt-2 text-sm text-slate-600">Core deliverables included in this service.</p>
                </div>
                <span class="rounded-full bg-brand-gold/15 px-3 py-1 text-xs font-extrabold text-slate-900 ring-1 ring-black/5">
                  {safeService.highlights.length} items
                </span>
              </div>

              <div class="mt-6 grid gap-3 md:grid-cols-2">
                {safeService.highlights.map((h) => (
                  <div class="rounded-2xl bg-slate-50 p-4 ring-1 ring-slate-200 transition hover:-translate-y-0.5 hover:bg-white hover:ring-slate-300 hover:shadow-sm">
                    <div class="flex items-start gap-3">
                      <span class="mt-0.5 inline-flex h-6 w-6 items-center justify-center rounded-full bg-brand-gold/20 ring-1 ring-black/5">
                        <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
                      </span>
                      <div class="text-sm font-semibold text-slate-800">{h}</div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ) : null}

          <!-- Steps (compact, no heavy enterprise timeline) -->
          {safeService.steps?.length ? (
            <div class="rounded-3xl bg-white p-7 ring-1 ring-slate-200 shadow-soft md:p-9">
              <h3 class="text-xl font-extrabold text-slate-900">Typical steps</h3>
              <p class="mt-2 text-sm text-slate-600">A common flow (may vary by destination).</p>

              <div class="mt-6 grid gap-4">
                {safeService.steps.map((st, i) => (
                  <div class="rounded-3xl bg-slate-50 p-5 ring-1 ring-slate-200 transition hover:bg-white hover:ring-slate-300 hover:shadow-sm">
                    <div class="flex items-start gap-4">
                      <div class="flex h-10 w-10 items-center justify-center rounded-2xl bg-brand-navy/10 ring-1 ring-slate-200">
                        <span class="text-sm font-extrabold text-brand-navy">
                          {String(i + 1).padStart(2, "0")}
                        </span>
                      </div>
                      <div class="flex-1">
                        <div class="text-base font-extrabold text-slate-900">{st.title}</div>
                        <p class="mt-1 text-sm text-slate-600">{(st as any).text || (st as any).description}</p>
                      </div>
                    </div>
                  </div>
                ))}
              </div>

              <div class="mt-6 flex flex-wrap gap-3">
                <a
                  href={`${BASE}process/`}
                  class="no-underline rounded-2xl bg-slate-100 px-6 py-3 font-semibold text-slate-900 ring-1 ring-slate-200 transition
                         hover:-translate-y-0.5 hover:bg-white hover:shadow-sm active:translate-y-0"
                >
                  View full process
                </a>
                <a
                  href={`${BASE}services/`}
                  class="no-underline rounded-2xl bg-slate-100 px-6 py-3 font-semibold text-slate-900 ring-1 ring-slate-200 transition
                         hover:-translate-y-0.5 hover:bg-white hover:shadow-sm active:translate-y-0"
                >
                  Back to services
                </a>
              </div>
            </div>
          ) : null}

          <!-- Corridors (based on your listed countries) -->
          <div class="rounded-3xl bg-white p-7 ring-1 ring-slate-200 shadow-soft md:p-9">
            <h3 class="text-xl font-extrabold text-slate-900">Active corridors</h3>
            <p class="mt-2 text-sm text-slate-600">
              We support deployments across these destinations (based on your listed corridors).
            </p>

            <div class="mt-5 flex flex-wrap gap-2">
                {corridors.map((c: string) => (
                <span class="rounded-full bg-brand-navy/5 px-4 py-2 text-xs font-extrabold text-brand-navy ring-1 ring-slate-200">
                  {c}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar (reduced) -->
        <aside class="grid gap-6 lg:sticky lg:top-24 lg:self-start">
          <div class="rounded-3xl bg-brand-navy p-7 text-white shadow-soft ring-1 ring-white/10 md:p-8">
            <div class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs ring-1 ring-white/15">
              <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
              Quick request
            </div>

            <h4 class="mt-5 text-lg font-extrabold">Get a checklist</h4>
            <p class="mt-2 text-sm text-white/80">
              Send destination + role + timeline. We’ll reply with next steps.
            </p>

            <div class="mt-6 grid gap-3">
              <a
                href={`${BASE}contact/?service=${safeService.slug}`}
                class="no-underline text-center rounded-2xl bg-brand-gold px-6 py-3 font-extrabold text-slate-900 shadow-soft transition
                       hover:-translate-y-0.5 hover:opacity-95 active:translate-y-0"
              >
                Contact Us
              </a>
              <a
                href={`${BASE}services/`}
                class="no-underline text-center rounded-2xl bg-white/10 px-6 py-3 font-semibold text-white ring-1 ring-white/20 transition
                       hover:-translate-y-0.5 hover:bg-white/15 active:translate-y-0"
              >
                Browse Services
              </a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>

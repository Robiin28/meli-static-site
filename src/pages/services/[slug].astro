---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/astro/PageHero.astro";
import Card from "../../components/astro/Card.astro";
import { services } from "../../data/services.js";

export async function getStaticPaths() {
  return services.map((s) => ({ params: { slug: s.slug } }));
}

const { slug } = Astro.params;
const service = services.find((s) => s.slug === slug);

if (!service) {
  throw new Error(`Service not found: ${slug}`);
}
---

<BaseLayout title={service.title} description={service.short}>
  <PageHero
    badge={service.category}
    title={service.title}
    subtitle={service.short}
    ctaHref="/contact"
    ctaLabel="Request This Service"
  />

  <section class="bg-slate-50">
    <div class="container mx-auto px-4 py-20">
      <div class="grid gap-10 lg:grid-cols-3">
        <!-- Main content -->
        <div class="lg:col-span-2">
          <div class="rounded-3xl bg-white p-8 shadow-soft ring-1 ring-slate-200">
            <h2 class="text-xl font-extrabold text-slate-900">What you get</h2>

            <div class="mt-6 grid gap-3 md:grid-cols-2">
              {service.highlights?.map((h) => (
                <div class="rounded-2xl bg-slate-50 p-4 ring-1 ring-slate-200">
                  <div class="text-sm font-semibold text-slate-800">{h}</div>
                </div>
              ))}
            </div>

            <h3 class="mt-10 text-xl font-extrabold text-slate-900">Typical steps</h3>

            <div class="mt-6 grid gap-6 md:grid-cols-2">
              {service.steps?.map((st, i) => (
                <Card
                  eyebrow={`Step ${String(i + 1).padStart(2, "0")}`}
                  title={st.title}
                  text={st.text}
                />
              ))}
            </div>
          </div>

          <div class="mt-10 rounded-3xl bg-white p-8 shadow-soft ring-1 ring-slate-200">
            <h3 class="text-xl font-extrabold text-slate-900">Notes</h3>
            <p class="mt-3 text-sm text-slate-600">
              Requirements can vary by destination and job role. Contact us to get a checklist
              tailored to your case.
            </p>

            <div class="mt-6 flex flex-wrap gap-3">
              <a
                href="/process"
                class="no-underline rounded-2xl bg-slate-100 px-6 py-3 font-semibold text-slate-900 ring-1 ring-slate-200 hover:bg-slate-200"
              >
                View Recruitment Process
              </a>
              <a
                href="/services"
                class="no-underline rounded-2xl bg-slate-100 px-6 py-3 font-semibold text-slate-900 ring-1 ring-slate-200 hover:bg-slate-200"
              >
                Back to Services
              </a>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="grid gap-6">
          <div class="rounded-3xl bg-brand-navy p-8 text-white shadow-soft">
            <div class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs ring-1 ring-white/20">
              <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
              Quick request
            </div>

            <h3 class="mt-5 text-lg font-extrabold">Get started</h3>
            <p class="mt-2 text-sm text-white/80">
              Tell us your destination, role type, and timeline. Weâ€™ll reply with next steps.
            </p>

            <div class="mt-6 grid gap-3">
              <a
                href="/contact"
                class="no-underline text-center rounded-2xl bg-brand-gold px-6 py-3 font-extrabold text-slate-900 shadow-soft hover:opacity-95"
              >
                Contact Us
              </a>
              <a
                href="/services"
                class="no-underline text-center rounded-2xl bg-white/10 px-6 py-3 font-semibold text-white ring-1 ring-white/25 hover:bg-white/15"
              >
                Browse Services
              </a>
            </div>
          </div>

          <div class="rounded-3xl bg-white p-8 shadow-soft ring-1 ring-slate-200">
            <h4 class="text-sm font-extrabold text-slate-900">Need a checklist?</h4>
            <p class="mt-2 text-sm text-slate-600">
              We can provide required documents and steps based on your destination.
            </p>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>

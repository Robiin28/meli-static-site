---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHero from "../components/astro/PageHero.astro";
import Stat from "../components/astro/Stat.astro";
import Card from "../components/astro/Card.astro";

const BASE = import.meta.env.BASE_URL || "/";

/**
 * ✅ Images
 * You said: “image should be different so make it import at top, i will add it later”
 * Put your real image paths later.
 */
const HERO_IMG = `${BASE}assets/section/image4.jpg`; // <-- replace later
const IMG_A = `${BASE}assets/section/image1.png`;
const IMG_B = `${BASE}assets/section/image2.png`;
const IMG_C = `${BASE}assets/section/image3.jpg`;

/** ✅ Major destinations only */
const DESTINATIONS = ["Jordan", "Kuwait", "Saudi Arabia", "Lebanon"];
---

<BaseLayout title="About" description="Learn about Meli Private Employment Agency and how we work.">
  <PageHero
    badge="Who we are"
    title="Trusted Recruitment & Foreign Employment Support"
    subtitle="We focus on transparency, compliance, and matching the right candidates to the right roles."
    ctaHref={`${BASE}contact/`}
    ctaLabel="Talk to Us"
  />

  <section class="relative overflow-hidden bg-white">
    <!-- subtle brand background -->
    <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-white via-slate-50/50 to-white"></div>
    <div class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full bg-brand-gold/10 blur-3xl"></div>
    <div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-brand-navy/10 blur-3xl"></div>

    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 sm:py-24 lg:py-32">
      <!-- HERO IMAGE SECTION (MELI style: navy/gold, no blue) -->
      <div class="relative mb-16 sm:mb-20 lg:mb-24">
        <div class="grid items-center gap-10 lg:grid-cols-2 lg:gap-14">
          <div>
            <span class="inline-flex items-center gap-2 rounded-full bg-brand-navy/5 px-4 py-2 text-xs font-extrabold text-brand-navy ring-1 ring-slate-200">
              <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
              Since 2020
            </span>

            <h1 class="mt-6 text-4xl font-extrabold tracking-tight text-slate-900 sm:text-5xl lg:text-6xl">
              Building bridges <span class="text-brand-navy">across borders</span>
            </h1>

            <p class="mt-6 text-lg leading-8 text-slate-600">
              Meli Private Employment Agency connects Ethiopian talent with global opportunities through ethical,
              compliant, and transparent recruitment practices.
            </p>

            <div class="mt-8 flex flex-wrap gap-4">
              <a
                href={`${BASE}contact/`}
                class="rounded-2xl bg-brand-gold px-6 py-3.5 text-sm font-extrabold text-slate-900 shadow-soft hover:opacity-95"
              >
                Start your journey
              </a>

              <a
                href={`${BASE}process/`}
                class="rounded-2xl bg-white px-6 py-3.5 text-sm font-extrabold text-brand-navy ring-1 ring-slate-200 hover:bg-slate-50"
              >
                Learn more →
              </a>
            </div>
          </div>

          <!-- Hero Image (single strong image + 2 supporting thumbnails) -->
          <div class="relative">
            <div class="overflow-hidden rounded-3xl bg-slate-100 shadow-soft ring-1 ring-slate-200">
              <img
                src={HERO_IMG}
                alt="MELI Agency - About"
                class="h-[320px] w-full object-cover sm:h-[380px]"
                loading="lazy"
              />
            </div>

            <div class="mt-5 grid grid-cols-2 gap-4">
              <div class="overflow-hidden rounded-2xl bg-slate-100 shadow-soft ring-1 ring-slate-200">
                <img src={IMG_A} alt="Recruitment consultation" class="h-36 w-full object-cover" loading="lazy" />
              </div>
              <div class="overflow-hidden rounded-2xl bg-slate-100 shadow-soft ring-1 ring-slate-200">
                <img src={IMG_B} alt="Documentation process" class="h-36 w-full object-cover" loading="lazy" />
              </div>
            </div>

            <div class="pointer-events-none absolute -z-10 -top-8 -right-8 h-72 w-72 rounded-full bg-brand-gold/10 blur-3xl"></div>
          </div>
        </div>
      </div>

      <!-- MISSION + STATS SECTION (logic + style fixed) -->
      <div class="grid gap-8 lg:grid-cols-12 lg:gap-12">
        <!-- Mission -->
        <div class="lg:col-span-7">
          <div class="rounded-3xl bg-white p-7 shadow-soft ring-1 ring-slate-200 sm:p-10">
            <div class="flex items-center gap-3">
              <span class="flex h-11 w-11 items-center justify-center rounded-2xl bg-brand-navy/5 ring-1 ring-slate-200">
                <svg class="h-5 w-5 text-brand-navy" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </span>
              <span class="text-xs font-extrabold uppercase tracking-wider text-brand-navy">Our mission</span>
            </div>

            <blockquote class="mt-6">
              <p class="text-2xl font-extrabold leading-tight text-slate-900 sm:text-3xl lg:text-4xl">
                “To create safe, dignified pathways for Ethiopian talent to thrive globally.”
              </p>
            </blockquote>

            <p class="mt-6 text-base leading-relaxed text-slate-600 md:text-lg">
              We believe every professional deserves access to international opportunities without exploitation.
              Our mission is to reduce risk and confusion in foreign employment through structured compliance,
              transparent communication, and genuine care for every candidate we serve.
            </p>

            <div class="mt-8 grid grid-cols-3 gap-3">
              <img src={IMG_A} alt="Team work" class="h-24 w-full rounded-2xl object-cover ring-1 ring-slate-200" loading="lazy" />
              <img src={IMG_B} alt="Documentation" class="h-24 w-full rounded-2xl object-cover ring-1 ring-slate-200" loading="lazy" />
              <img src={IMG_C} alt="Deployment" class="h-24 w-full rounded-2xl object-cover ring-1 ring-slate-200" loading="lazy" />
            </div>
          </div>
        </div>

        <!-- Stats Panel (no extra card inside Stat; uses your refined Stat component) -->
        <div class="lg:col-span-5">
          <div class="rounded-3xl bg-white p-7 shadow-soft ring-1 ring-slate-200 sm:p-8">
            <div class="flex items-center justify-between gap-4">
              <h3 class="text-lg font-extrabold text-slate-900">Key highlights</h3>
              <span class="inline-flex items-center gap-2 rounded-full bg-brand-navy/5 px-3 py-1 text-xs font-extrabold text-brand-navy ring-1 ring-slate-200">
                <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
                Updated
              </span>
            </div>

            <div class="mt-6 grid gap-6">
              <div class="rounded-2xl bg-slate-50 p-5 ring-1 ring-slate-200">
                <Stat value="500+" label="Candidates supported through screening and placement readiness" />
                <div class="mt-3 h-2 w-full overflow-hidden rounded-full bg-white ring-1 ring-slate-200">
                  <div class="h-2 w-4/5 rounded-full bg-brand-gold"></div>
                </div>
              </div>

              <div class="rounded-2xl bg-slate-50 p-5 ring-1 ring-slate-200">
                <Stat value="Major destinations" label="We currently focus on these key countries:" />
                <div class="mt-3 flex flex-wrap gap-2">
                  {DESTINATIONS.map((c) => (
                    <span class="inline-flex items-center rounded-full bg-white px-3 py-1 text-xs font-extrabold text-brand-navy ring-1 ring-slate-200">
                      {c}
                    </span>
                  ))}
                </div>
              </div>

              <div class="rounded-2xl bg-slate-50 p-5 ring-1 ring-slate-200">
                <Stat value="98%" label="Documentation accuracy through structured checks and review" />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- HOW WE WORK - Process Timeline (MELI colors) -->
      <div class="mt-20 sm:mt-24">
        <div class="mx-auto max-w-3xl text-center">
          <span class="inline-flex items-center gap-2 rounded-full bg-brand-navy/5 px-4 py-2 text-xs font-extrabold text-brand-navy ring-1 ring-slate-200">
            <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
            Our process
          </span>
          <h2 class="mt-4 text-3xl font-extrabold tracking-tight text-slate-900 sm:text-4xl">
            How we make it happen
          </h2>
          <p class="mt-4 text-lg text-slate-600">
            A structured, transparent journey from application to deployment.
          </p>
        </div>

        <div class="mt-12 grid gap-6 md:grid-cols-3">
          <!-- Step 1 -->
          <div class="rounded-3xl bg-white p-6 shadow-soft ring-1 ring-slate-200">
            <div class="flex items-center gap-3">
              <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-brand-gold text-slate-900 font-extrabold shadow-soft">
                1
              </div>
              <div class="text-sm font-extrabold text-slate-900">Sourcing & Screening</div>
            </div>
            <p class="mt-3 text-sm text-slate-600">
              We verify credentials, assess readiness, and match candidates to suitable roles.
            </p>
            <div class="mt-5 overflow-hidden rounded-2xl ring-1 ring-slate-200">
              <img src={IMG_A} alt="Screening process" class="h-40 w-full object-cover" loading="lazy" />
            </div>
          </div>

          <!-- Step 2 -->
          <div class="rounded-3xl bg-white p-6 shadow-soft ring-1 ring-slate-200">
            <div class="flex items-center gap-3">
              <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-brand-gold text-slate-900 font-extrabold shadow-soft">
                2
              </div>
              <div class="text-sm font-extrabold text-slate-900">Documentation & Compliance</div>
            </div>
            <p class="mt-3 text-sm text-slate-600">
              Visa processing, contract review, and compliance checks aligned with destination requirements.
            </p>
            <div class="mt-5 overflow-hidden rounded-2xl ring-1 ring-slate-200">
              <img src={IMG_B} alt="Documentation process" class="h-40 w-full object-cover" loading="lazy" />
            </div>
          </div>

          <!-- Step 3 -->
          <div class="rounded-3xl bg-white p-6 shadow-soft ring-1 ring-slate-200">
            <div class="flex items-center gap-3">
              <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-brand-gold text-slate-900 font-extrabold shadow-soft">
                3
              </div>
              <div class="text-sm font-extrabold text-slate-900">Deployment & Support</div>
            </div>
            <p class="mt-3 text-sm text-slate-600">
              Orientation, travel coordination, and post-arrival follow-up for smoother transitions.
            </p>
            <div class="mt-5 overflow-hidden rounded-2xl ring-1 ring-slate-200">
              <img src={IMG_C} alt="Deployment" class="h-40 w-full object-cover" loading="lazy" />
            </div>
          </div>
        </div>
      </div>

      <!-- WHY CHOOSE US (clean MELI layout) -->
 <div class="mt-20 sm:mt-24">
  <div class="rounded-3xl bg-slate-50 p-8 ring-1 ring-slate-200 sm:p-12 lg:p-16">
    <div class="grid gap-10 lg:grid-cols-12 lg:gap-12 lg:items-stretch">
      <!-- LEFT -->
      <div class="lg:col-span-6 h-full">
        <div class="h-full rounded-3xl bg-white/60 p-6 ring-1 ring-slate-200">
          <span class="inline-flex items-center gap-2 rounded-full bg-white px-4 py-2 text-xs font-extrabold text-brand-navy ring-1 ring-slate-200">
            <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
            Why Meli?
          </span>

          <h2 class="mt-4 text-3xl font-extrabold tracking-tight text-slate-900 sm:text-4xl">
            Built for trust. Built for results.
          </h2>

          <p class="mt-4 text-lg text-slate-600">
            We combine compliance discipline with real human support — for employers and candidates.
          </p>

          <div class="mt-6 grid gap-3">
            <div class="flex items-start gap-3 rounded-2xl bg-white p-4 ring-1 ring-slate-200">
              <div class="mt-0.5 h-2 w-2 rounded-full bg-brand-gold"></div>
              <div>
                <div class="text-sm font-extrabold text-slate-900">Compliance-first workflow</div>
                <div class="mt-1 text-sm text-slate-600">Every step verified and documented.</div>
              </div>
            </div>

            <div class="flex items-start gap-3 rounded-2xl bg-white p-4 ring-1 ring-slate-200">
              <div class="mt-0.5 h-2 w-2 rounded-full bg-brand-gold"></div>
              <div>
                <div class="text-sm font-extrabold text-slate-900">Transparent updates</div>
                <div class="mt-1 text-sm text-slate-600">Clear status from sourcing to deployment.</div>
              </div>
            </div>

            <div class="flex items-start gap-3 rounded-2xl bg-white p-4 ring-1 ring-slate-200">
              <div class="mt-0.5 h-2 w-2 rounded-full bg-brand-gold"></div>
              <div>
                <div class="text-sm font-extrabold text-slate-900">Candidate readiness</div>
                <div class="mt-1 text-sm text-slate-600">Screening and preparation reduce mismatch.</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- RIGHT -->
      <div class="lg:col-span-6 h-full">
        <div class="h-full rounded-3xl bg-white/60 p-6 ring-1 ring-slate-200">
          <div class="grid h-full gap-6 md:grid-cols-2 auto-rows-fr">
            <Card
              eyebrow="Value"
              title="Transparency"
              text="Clear steps, checklists, and timelines—so you always know what’s next."
            />
            <Card
              eyebrow="Value"
              title="Compliance-first"
              text="Structured documentation and approvals aligned with destination requirements."
            />
            <Card
              eyebrow="Value"
              title="Candidate readiness"
              text="Screening and preparation reduce mismatch and improve deployment success."
            />
            <Card
              eyebrow="Value"
              title="Dedicated support"
              text="Guidance from documentation to deployment with human follow-up."
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


      <!-- FINAL CTA (fix links + MELI style) -->
      <div class="mt-20 sm:mt-24">
        <div class="relative isolate overflow-hidden rounded-3xl bg-brand-navy shadow-2xl ring-1 ring-white/10">
          <div class="absolute inset-0 -z-10">
            <img src={IMG_C} alt="" class="h-full w-full object-cover opacity-15" loading="lazy" />
            <div class="absolute inset-0 bg-gradient-to-r from-brand-navy via-brand-navy/95 to-brand-navy"></div>
          </div>

          <div class="px-6 py-14 sm:px-12 sm:py-16 lg:px-16 lg:py-20">
            <div class="mx-auto max-w-2xl text-center">
              <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
                Ready to start your journey?
              </h2>
              <p class="mx-auto mt-4 max-w-xl text-lg text-white/80">
                Whether you’re an employer seeking talent or a candidate seeking opportunity — we’re here to help.
              </p>

              <div class="mt-8 flex flex-wrap items-center justify-center gap-4">
                <a
                  href={`${BASE}contact/`}
                  class="rounded-2xl bg-brand-gold px-8 py-4 text-base font-extrabold text-slate-900 shadow-soft hover:opacity-95 inline-flex items-center gap-2"
                >
                  Start conversation
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>

                <a
                  href={`${BASE}process/`}
                  class="rounded-2xl bg-white/10 px-8 py-4 text-base font-extrabold text-white ring-1 ring-white/15 hover:bg-white/15"
                >
                  View our process
                </a>
              </div>

              <div class="mt-8 flex flex-wrap items-center justify-center gap-6 text-sm text-white/70">
                <span class="inline-flex items-center gap-2">
                  <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
                  Licensed agency
                </span>
                <span class="inline-flex items-center gap-2">
                  <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
                  Compliance-first
                </span>
                <span class="inline-flex items-center gap-2">
                  <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
                  Candidate support
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>
</BaseLayout>

---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/astro/Hero.astro";

import WhyUsSection from "../components/sections/WhyUsSection.astro";

import ServicesPreviewSection from "../components/sections/ServicesPreviewSection.astro";
import CtaSection from "../components/sections/CtaSection.astro";
---

<BaseLayout
  title="Meli Employment Ethiopia"
  description="Meli Employment Ethiopia by Meli Private Employment Agency provides foreign employment and recruitment services across multiple sectors."
>
  <Hero />
  <section class="bg-white">
    <div class="container mx-auto px-4 py-4">
      <p class="text-sm text-slate-600">
        Meli Private Employment Agency is an employment agency in Ethiopia
        supporting compliant overseas recruitment, documentation, and
        deployment.
      </p>
    </div>
  </section>
  <WhyUsSection />
  
  <ServicesPreviewSection />
  <CtaSection />
</BaseLayout>

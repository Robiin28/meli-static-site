---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/astro/ContactForm.astro";

const MAP_EMBED =
  "https://maps.app.goo.gl/LQpzHN7Ze8xwjVkA8?g_st=it";

const EMAIL = "meliemploy@gmail.com";
const PHONE = "+251 966 389 017, +251 920 607 879";
const OFFICE = "Addis Ababa, Ethiopia";
---

<BaseLayout
  title="Contact"
  description="Contact Meli Private Employment Agency for recruitment or overseas job placement."
>
  <section class="relative overflow-hidden bg-slate-50 py-12 md:py-16 lg:py-20">
    <!-- Background -->
    <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-white via-slate-50 to-slate-50"></div>
    <div class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full bg-brand-gold/10 blur-3xl"></div>
    <div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-brand-navy/10 blur-3xl"></div>

    <div class="container relative mx-auto px-4">
      <!-- Header -->
      <div class="rounded-3xl bg-brand-navy p-8 text-white shadow-soft ring-1 ring-white/10 md:p-10">
        <div class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs ring-1 ring-white/20">
          <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
          Contact
        </div>

        <h1 class="mt-5 text-3xl font-extrabold tracking-tight md:text-4xl">
          Talk to our team
        </h1>

        <p class="mt-4 max-w-2xl text-white/80 md:text-lg">
          Send a message and we’ll respond with next steps and required details.
        </p>
      </div>

      <!-- ROW 1: Form + Map (map uses full space, no empty right column) -->
      <div class="mt-8 grid gap-8 lg:mt-10 lg:grid-cols-2 lg:items-stretch">
        <!-- Form -->
        <div
          class="group relative rounded-3xl bg-white p-6 shadow-soft ring-1 ring-slate-200 transition
                 hover:-translate-y-0.5 hover:shadow-xl hover:ring-slate-300 md:p-8"
        >
          <div class="pointer-events-none absolute inset-0 rounded-3xl opacity-0 transition group-hover:opacity-100">
            <div class="absolute -top-24 -right-24 h-56 w-56 rounded-full bg-brand-gold/10 blur-3xl"></div>
          </div>

          <h2 class="relative text-xl font-extrabold text-slate-900">Send a message</h2>
          <p class="relative mt-2 text-sm text-slate-600">
            Share destination, role type, and timeline for faster support.
          </p>

          <div class="relative mt-6">
            <ContactForm />
          </div>
        </div>

        <!-- Map (fills height nicely) -->
        <div
          class="group relative overflow-hidden rounded-3xl bg-white shadow-soft ring-1 ring-slate-200 transition
                 hover:-translate-y-0.5 hover:shadow-xl hover:ring-slate-300"
        >
          <div class="flex items-center justify-between gap-4 border-b border-slate-100 px-6 py-4">
            <div>
              <div class="text-sm font-extrabold text-slate-900">Find us on the map</div>
              <div class="text-xs text-slate-500">Open location and get directions</div>
            </div>

            <a
              class="rounded-full bg-brand-gold/15 px-4 py-2 text-xs font-extrabold text-slate-900 ring-1 ring-black/5
                     transition hover:bg-brand-gold/25 hover:-translate-y-0.5 active:translate-y-0"
              href="https://www.google.com/maps?q=Meli%20Private%20Employment%20Agency%20Addis%20Ababa"
              target="_blank"
              rel="noreferrer"
            >
              Get Directions
            </a>
          </div>

          <iframe
            title="MELI Office Location"
            class="h-[380px] w-full md:h-[420px] lg:h-full"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            src={MAP_EMBED}
          ></iframe>

          <div class="border-t border-slate-100 px-6 py-4">
            <div class="inline-flex items-center gap-2 rounded-full bg-brand-navy/5 px-3 py-1 text-xs font-extrabold text-brand-navy ring-1 ring-slate-200">
              <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
              {OFFICE}
            </div>
          </div>
        </div>
      </div>

      <!-- ROW 2: Contact Details + Checklist -->
      <div class="mt-8 grid gap-8 lg:grid-cols-2 lg:items-stretch">
        <!-- Contact details (improved design) -->
        <div
          class="group relative rounded-3xl bg-white p-6 shadow-soft ring-1 ring-slate-200 transition
                 hover:-translate-y-0.5 hover:shadow-xl hover:ring-slate-300 md:p-8"
        >
          <div class="pointer-events-none absolute inset-0 rounded-3xl opacity-0 transition group-hover:opacity-100">
            <div class="absolute -bottom-24 -left-24 h-56 w-56 rounded-full bg-brand-navy/10 blur-3xl"></div>
          </div>

          <div class="relative flex items-start justify-between gap-6">
            <div>
              <h2 class="text-xl font-extrabold text-slate-900">Contact details</h2>
              <p class="mt-2 text-sm text-slate-600">
                Use any of these options to reach MELI directly.
              </p>
            </div>

            <span class="hidden items-center gap-2 rounded-full bg-brand-navy/5 px-3 py-1 text-xs font-extrabold text-brand-navy ring-1 ring-slate-200 md:inline-flex">
              Support
            </span>
          </div>

          <div class="relative mt-7 grid gap-3">
            <!-- Email -->
            <a
              href={`mailto:${EMAIL}`}
              class="group/item flex items-center gap-4 rounded-2xl bg-white p-4 ring-1 ring-slate-200
                     transition hover:-translate-y-0.5 hover:shadow-md hover:ring-slate-300"
            >
              <span
                class="flex h-11 w-11 items-center justify-center rounded-2xl bg-brand-gold/15 ring-1 ring-black/5
                       transition group-hover/item:scale-[1.03]"
              >
                <svg viewBox="0 0 24 24" class="h-5 w-5 text-slate-900" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 6h16v12H4z" />
                  <path d="m4 7 8 6 8-6" />
                </svg>
              </span>

              <div class="min-w-0">
                <div class="text-xs font-bold text-slate-500">Email</div>
                <div class="mt-0.5 truncate text-base font-extrabold text-slate-900 transition group-hover/item:text-brand-navy">
                  {EMAIL}
                </div>
              </div>

              <span class="ml-auto text-xs font-extrabold text-slate-400 transition group-hover/item:text-slate-600">
                Send →
              </span>
            </a>

            <!-- Phone -->
            <a
              href={`tel:${PHONE.replace(/\s+/g, "")}`}
              class="group/item flex items-center gap-4 rounded-2xl bg-white p-4 ring-1 ring-slate-200
                     transition hover:-translate-y-0.5 hover:shadow-md hover:ring-slate-300"
            >
              <span
                class="flex h-11 w-11 items-center justify-center rounded-2xl bg-brand-navy/10 ring-1 ring-black/5
                       transition group-hover/item:scale-[1.03]"
              >
                <svg viewBox="0 0 24 24" class="h-5 w-5 text-slate-900" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.8 19.8 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6A19.8 19.8 0 0 1 2.08 4.18 2 2 0 0 1 4.06 2h3a2 2 0 0 1 2 1.72c.12.86.31 1.7.57 2.5a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.58-1.09a2 2 0 0 1 2.11-.45c.8.26 1.64.45 2.5.57A2 2 0 0 1 22 16.92z"/>
                </svg>
              </span>

              <div class="min-w-0">
                <div class="text-xs font-bold text-slate-500">Phone</div>
                <div class="mt-0.5 truncate text-base font-extrabold text-slate-900 transition group-hover/item:text-brand-navy">
                  {PHONE}
                </div>
              </div>

              <span class="ml-auto text-xs font-extrabold text-slate-400 transition group-hover/item:text-slate-600">
                Call →
              </span>
            </a>

            <!-- Office -->
            <div class="flex items-center gap-4 rounded-2xl bg-slate-50 p-4 ring-1 ring-slate-200">
              <span class="flex h-11 w-11 items-center justify-center rounded-2xl bg-brand-gold/10 ring-1 ring-black/5">
                <svg viewBox="0 0 24 24" class="h-5 w-5 text-slate-900" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 21s7-4.5 7-10a7 7 0 1 0-14 0c0 5.5 7 10 7 10z"/>
                  <circle cx="12" cy="11" r="2.5"/>
                </svg>
              </span>

              <div class="min-w-0">
                <div class="text-xs font-bold text-slate-500">Office</div>
                <div class="mt-0.5 truncate text-base font-extrabold text-slate-900">{OFFICE}</div>
              </div>
            </div>
          </div>

          <div class="relative mt-6 rounded-2xl bg-brand-navy/5 p-4 ring-1 ring-slate-200">
            <div class="text-xs font-extrabold text-brand-navy">Business hours</div>
            <p class="mt-1 text-sm text-slate-600">
              Monday–Saturday • 8:30 AM – 6:00 PM (Addis Ababa time)
            </p>
          </div>
        </div>

        <!-- Checklist -->
        <div
          class="group rounded-3xl bg-brand-navy p-8 text-white shadow-soft ring-1 ring-white/10 transition
                 hover:-translate-y-0.5 hover:shadow-xl hover:ring-white/20"
        >
          <h3 class="text-lg font-extrabold">Fast checklist</h3>
          <p class="mt-2 text-sm text-white/80">
            Include these 3 items in your message:
          </p>

          <ul class="mt-4 grid gap-2 text-sm text-white/85">
            <li class="rounded-2xl bg-white/10 p-3 ring-1 ring-white/15 transition hover:bg-white/15">
              Destination country
            </li>
            <li class="rounded-2xl bg-white/10 p-3 ring-1 ring-white/15 transition hover:bg-white/15">
              Job role / sector
            </li>
            <li class="rounded-2xl bg-white/10 p-3 ring-1 ring-white/15 transition hover:bg-white/15">
              Timeline / urgency
            </li>
          </ul>

          <div class="mt-6 rounded-2xl bg-white/5 p-4 ring-1 ring-white/10">
            <div class="text-xs font-extrabold text-white/90">Response time</div>
            <p class="mt-1 text-sm text-white/75">
              We typically reply within 1 business day.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

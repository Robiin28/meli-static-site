---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/astro/PageHero.astro";
import { posts } from "../../data/blog.js";

const BASE = import.meta.env.BASE_URL || "/";

export async function getStaticPaths() {
  return posts.map((p) => ({ params: { slug: p.slug } }));
}

const { slug } = Astro.params;
const post = posts.find((p) => p.slug === slug);

// ✅ better than throw (gives proper 404)
if (!post) {
  return new Response("Not found", { status: 404 });
}

// ✅ BASE-safe links
const BLOG_URL = `${BASE}blog/`;
const PROCESS_URL = `${BASE}process/`;
const CONTACT_URL = `${BASE}contact/`;
const SERVICES_URL = `${BASE}services/`;

// ✅ very light markdown -> html (enough for your content style)
// (headings + bullets + paragraphs)
const render = (text = "") =>
  String(text)
    .replaceAll("&", "&amp;")
    .replaceAll("<", "&lt;")
    .replaceAll(">", "&gt;")
    .replace(/^### (.*)$/gm, "<h3>$1</h3>")
    .replace(/^## (.*)$/gm, "<h2>$1</h2>")
    .replace(/^\- (.*)$/gm, "<li>$1</li>")
    .replace(/(<li>.*<\/li>\n?)+/g, (m) => `<ul>${m}</ul>`)
    .replace(/\n\n+/g, "</p><p>")
    .replace(/^/, "<p>")
    .replace(/$/, "</p>");
---

<BaseLayout title={post.title} description={post.excerpt}>
  <PageHero
    badge={post.category || post.date}
    title={post.title}
    subtitle={post.excerpt}
    ctaHref={BLOG_URL}
    ctaLabel="Back to Blog"
  />

  <section class="relative overflow-hidden bg-white">
    <!-- soft background like other pages -->
    <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-white via-slate-50/40 to-white"></div>
    <div class="pointer-events-none absolute -top-24 -right-24 h-72 w-72 rounded-full bg-brand-gold/10 blur-3xl"></div>
    <div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-brand-navy/10 blur-3xl"></div>

    <div class="relative mx-auto max-w-7xl px-4 py-10 sm:px-6 sm:py-14 lg:py-16">
      <div class="grid gap-10 lg:grid-cols-12 lg:gap-12">
        <!-- ARTICLE -->
        <article class="lg:col-span-8">
          <!-- Hero image card (optional but nicer) -->
          {post.image && (
            <div class="overflow-hidden rounded-3xl bg-slate-100 shadow-soft ring-1 ring-slate-200">
              <div class="relative">
                <img
                  src={post.image}
                  alt={post.title}
                  class="h-56 w-full object-cover sm:h-72"
                  loading="eager"
                  decoding="async"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/35 to-transparent"></div>

                <div class="absolute bottom-4 left-4 flex flex-wrap items-center gap-2">
                  {post.category && (
                    <span class="rounded-full bg-white/90 px-3 py-1 text-xs font-extrabold text-slate-900 ring-1 ring-black/5 backdrop-blur">
                      {post.category}
                    </span>
                  )}
                  <span class="rounded-full bg-white/90 px-3 py-1 text-xs font-semibold text-slate-700 ring-1 ring-black/5 backdrop-blur">
                    {post.date}
                  </span>
                </div>
              </div>
            </div>
          )}

          <!-- Content card -->
          <div class="mt-6 rounded-3xl bg-white p-7 shadow-soft ring-1 ring-slate-200 sm:p-10">
            <div class="proseish" set:html={render(post.content)} />
          </div>

          <!-- Actions -->
          <div class="mt-8 flex flex-wrap gap-3">
            <a
              href={BLOG_URL}
              class="no-underline rounded-2xl bg-slate-50 px-6 py-3 text-sm font-extrabold text-slate-900 ring-1 ring-slate-200 hover:bg-slate-100"
            >
              ← Back to Blog
            </a>
            <a
              href={PROCESS_URL}
              class="no-underline rounded-2xl bg-slate-50 px-6 py-3 text-sm font-extrabold text-slate-900 ring-1 ring-slate-200 hover:bg-slate-100"
            >
              View Process
            </a>
          </div>
        </article>

        <!-- SIDEBAR -->
        <aside class="lg:col-span-4 grid gap-6 content-start">
          <div class="rounded-3xl bg-brand-navy p-8 text-white shadow-soft ring-1 ring-white/10">
            <div class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-xs ring-1 ring-white/20">
              <span class="h-2 w-2 rounded-full bg-brand-gold"></span>
              Need help?
            </div>

            <h3 class="mt-4 text-lg font-extrabold">Get a checklist</h3>
            <p class="mt-2 text-sm text-white/80">
              Tell us destination + role — we’ll reply with requirements and steps.
            </p>

            <div class="mt-6 grid gap-3">
              <a
                href={CONTACT_URL}
                class="no-underline text-center rounded-2xl bg-brand-gold px-6 py-3 text-sm font-extrabold text-slate-900 shadow-soft hover:opacity-95"
              >
                Contact Us
              </a>
              <a
                href={SERVICES_URL}
                class="no-underline text-center rounded-2xl bg-white/10 px-6 py-3 text-sm font-extrabold text-white ring-1 ring-white/25 hover:bg-white/15"
              >
                Services
              </a>
            </div>
          </div>

          <div class="rounded-3xl bg-white p-8 shadow-soft ring-1 ring-slate-200">
            <h4 class="text-sm font-extrabold text-slate-900">Note</h4>
            <p class="mt-2 text-sm text-slate-600">
              Requirements vary by destination and employer. Always confirm before submitting documents.
            </p>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>

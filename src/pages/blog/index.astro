---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/astro/PageHero.astro";
import { posts } from "../../data/blog.js";

const BASE = import.meta.env.BASE_URL || "/";

/* ✅ Proper date sorting (uses dateISO) */
const sorted = [...posts].sort(
  (a, b) => new Date(b.dateISO).getTime() - new Date(a.dateISO).getTime()
);
const featured = sorted[0];
const rest = sorted.slice(1);

/* ✅ BASE-safe post URL */
const postHref = (slug = "") => {
  const clean = String(slug).replace(/^\/+/, "").replace(/\/+$/, "");
  return `${BASE}blog/${clean}/`;
};
---

<BaseLayout title="Blog" description="Updates, guidance, and recruitment insights.">
  <PageHero
    badge="Updates"
    title="Recruitment Insights"
    subtitle="Guides, destination updates, and documentation advice."
    ctaHref={`${BASE}contact/`}
    ctaLabel="Ask a Question"
  />

  <section class="relative overflow-hidden bg-white">
    <!-- Soft MELI background -->
    <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-white via-slate-50/40 to-white"></div>

    <div class="relative mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">

      {/* ================= FEATURED ================= */}
      {featured && (
        <a href={postHref(featured.slug)} class="group block no-underline">
          <div class="grid overflow-hidden rounded-3xl bg-white shadow-soft ring-1 ring-slate-200 transition hover:ring-slate-300 md:grid-cols-12">

            {/* Content */}
            <div class="flex flex-col justify-center p-6 md:col-span-7 md:p-10 lg:col-span-8">
              <div class="flex flex-wrap items-center gap-3">
                <span class="rounded-full bg-brand-navy/5 px-3 py-1 text-xs font-extrabold text-brand-navy ring-1 ring-brand-navy/10">
                  Featured
                </span>

                <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600 ring-1 ring-slate-200">
                  {featured.category}
                </span>

                <span class="text-xs font-semibold text-slate-500">
                  {featured.date}
                </span>
              </div>

              <h2 class="mt-4 text-2xl font-extrabold tracking-tight text-slate-900 sm:text-3xl">
                {featured.title}
              </h2>

              <p class="mt-3 max-w-2xl text-base text-slate-600">
                {featured.excerpt}
              </p>

              <div class="mt-6 inline-flex items-center gap-2 text-sm font-extrabold text-brand-navy">
                Read full article
                <span class="transition-transform group-hover:translate-x-1">→</span>
              </div>
            </div>

            {/* Image */}
            <div class="relative h-56 md:col-span-5 md:h-auto lg:col-span-4">
              <img
                src={featured.image}
                alt={featured.title}
                class="h-full w-full object-cover md:rounded-r-3xl"
                loading="eager"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent md:bg-gradient-to-l"></div>
            </div>
          </div>
        </a>
      )}

      {/* ================= GRID ================= */}
      {rest.length > 0 && (
        <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {rest.map((p) => (
            <a href={postHref(p.slug)} class="group block no-underline">
              <div class="flex h-full flex-col overflow-hidden rounded-3xl bg-white shadow-soft ring-1 ring-slate-200 transition hover:ring-slate-300">

                {/* Image */}
                <div class="relative h-52 w-full overflow-hidden bg-slate-100">
                  <img
                    src={p.image}
                    alt={p.title}
                    class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.04]"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>

                  <div class="absolute bottom-3 left-3 flex flex-wrap items-center gap-2">
                    <span class="rounded-full bg-white/90 px-3 py-1 text-xs font-bold text-slate-900 ring-1 ring-black/5 backdrop-blur">
                      {p.category}
                    </span>
                  </div>
                </div>

                {/* Content */}
                <div class="flex flex-1 flex-col p-6">
                  <div class="text-xs font-semibold text-slate-500">
                    {p.date}
                  </div>

                  <h3 class="mt-2 text-lg font-extrabold text-slate-900 group-hover:text-brand-navy transition line-clamp-2">
                    {p.title}
                  </h3>

                  <p class="mt-3 text-sm text-slate-600 line-clamp-3">
                    {p.excerpt}
                  </p>

                  <div class="mt-5 inline-flex items-center gap-1 text-sm font-extrabold text-brand-navy">
                    Read more
                    <span class="transition-transform group-hover:translate-x-1">→</span>
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      )}

      {/* ================= CTA ================= */}
      <div class="mt-16 rounded-3xl bg-brand-navy p-8 text-white shadow-soft ring-1 ring-white/10">
        <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">

          <div>
            <h3 class="text-xl font-extrabold">Need destination guidance?</h3>
            <p class="mt-2 max-w-xl text-sm text-white/80">
              Tell us your role and target country — we’ll share the required checklist.
            </p>
          </div>

          <div class="flex flex-wrap gap-3">
            <a
              href={`${BASE}contact/`}
              class="no-underline rounded-2xl bg-brand-gold px-6 py-3 text-sm font-extrabold text-slate-900 shadow-soft hover:opacity-95"
            >
              Contact Us
            </a>

            <a
              href={`${BASE}services/`}
              class="no-underline rounded-2xl bg-white/10 px-6 py-3 text-sm font-extrabold text-white ring-1 ring-white/25 hover:bg-white/15"
            >
              View Services
            </a>
          </div>

        </div>
      </div>

    </div>
  </section>
</BaseLayout>

---
/**
 * File: src/pages/ccta.astro
 * Purpose: Trusted Partners / Clients showcase page (logos only, no cards)
 */

const BASE = import.meta.env.BASE_URL;

const partners = [
  { name: "ethio telecom", logo: `${BASE}assets/partners/telecom.png` },
  { name: "Ethiopian Airlines", logo: `${BASE}assets/partners/electric.jpg` },
  { name: "Awash Bank", logo: `${BASE}assets/partners/awash.png` },
  { name: "Bank of Somaliland", logo: `${BASE}assets/partners/somali.jpg` },
  { name: "Aqua Dynamic", logo: `${BASE}assets/partners/aqua.jpg` },
  { name: "Genco", logo: `${BASE}assets/partners/ginco.jpg` },
  { name: "Qatar", logo: `${BASE}assets/partners/tad.png` },
  { name: "Paradise Group", logo: `${BASE}assets/partners/paradize.png` },
];

const title = "Trusted Partners | MELI Private Employment Agency";
const description =
  "We're trusted by leading organizations. Explore our valued partners and clients we've supported across recruitment and workforce solutions.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body class="bg-white text-gray-900">
    <main class="mx-auto max-w-7xl px-4 py-14 sm:px-6 lg:px-8">
      <!-- Header -->
      <section class="mx-auto max-w-3xl text-center">
        <p class="inline-flex items-center gap-2 rounded-full border border-black/10 bg-white px-4 py-1 text-xs font-semibold uppercase tracking-wide text-brand-navy shadow-soft">
          Trusted Partners
          <span class="h-1 w-1 rounded-full bg-brand-gold"></span>
          Proof of reliability
        </p>

        <h1 class="mt-5 text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl">
          Organizations that trust us
        </h1>

        <p class="mt-4 text-base text-gray-600 sm:text-lg">
          From large institutions to growing businesses, we're proud to support partners with ethical recruitment,
          compliance, and dependable workforce delivery.
        </p>
      </section>

      <!-- FAST Marquee (cleaner spacing, smoother, better logo presence) -->
      <section class="mt-10">
        <div class="relative overflow-hidden">

          <div class="pointer-events-none absolute inset-y-0 left-0 w-20 bg-gradient-to-r from-white to-transparent"></div>
          <div class="pointer-events-none absolute inset-y-0 right-0 w-20 bg-gradient-to-l from-white to-transparent"></div>

          <div class="marquee-wrap px-6 py-8">
            <div class="marquee-track">
              {partners.concat(partners).map((p) => (
                <div class="marquee-item">
                  <img
                    src={p.logo}
                    alt={`${p.name} logo`}
                    loading="lazy"
                    decoding="async"
                    class="marquee-logo"
                  />
                </div>
              ))}
            </div>
          </div>
        </div>

        <style>
          /* ---------- Marquee CSS ---------- */
          .marquee-wrap {
            --gap: 52px;
            /* âœ… FAST SPEED: lower = faster */
            --duration: 28s;
          }

          .marquee-track {
            display: flex;
            align-items: center;
            gap: var(--gap);
            width: max-content;
            animation: marquee var(--duration) linear infinite;
            will-change: transform;
          }

          .marquee-item {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 6px 2px;
          }

          .marquee-logo {
            height: 72px;
            width: auto;
            max-width: 220px;
            object-fit: contain;
            opacity: 0.98;
            transform: translateZ(0);
            transition: transform 220ms ease, opacity 220ms ease, filter 220ms ease;
            filter: saturate(1.05) contrast(1.05);
          }

          .marquee-item:hover .marquee-logo {
            transform: scale(1.06);
            opacity: 1;
            filter: saturate(1.15) contrast(1.08) drop-shadow(0 10px 18px rgba(0, 0, 0, 0.12));
          }

          @keyframes marquee {
            0% {
              transform: translateX(0);
            }
            100% {
              transform: translateX(-50%);
            }
          }

          @media (max-width: 640px) {
            .marquee-wrap {
              --gap: 34px;
              --duration: 19s;
            }
            .marquee-logo {
              height: 60px;
              max-width: 200px;
            }
          }

          @media (prefers-reduced-motion: reduce) {
            .marquee-track {
              animation: none;
            }
          }
        </style>
      </section>

      <!-- Logos only (NO CARDS) -->
      <section class="mt-12">
        <div class="flex items-end justify-between gap-6">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Trusted by</h2>
            <p class="mt-2 text-gray-600">A selection of our valued partners and clients.</p>
          </div>

          <a
            href={`${BASE}contact/`}
            class="hidden rounded-xl bg-brand-navy px-5 py-3 text-sm font-semibold text-white shadow-soft transition hover:opacity-95 sm:inline-flex"
          >
            Become a Partner
          </a>
        </div>

        <!-- Clean logo grid (bigger + consistent + no grayscale) -->
        <div class="mt-8 grid grid-cols-2 items-center gap-x-12 gap-y-10 sm:grid-cols-3 lg:grid-cols-4">
          {partners.map((p) => (
            <div class="flex items-center justify-center">
              <img
                src={p.logo}
                alt={`${p.name} logo`}
                loading="lazy"
                decoding="async"
                class="h-16 sm:h-20 md:h-24 w-auto max-w-[240px] object-contain opacity-95 transition duration-200 hover:scale-[1.05] hover:drop-shadow-[0_14px_18px_rgba(0,0,0,0.12)]"
              />
            </div>
          ))}
        </div>
      </section>

      <!-- CTA -->
      <section class="mt-14">
        <div class="relative overflow-hidden rounded-3xl border border-black/5 bg-brand-navy px-6 py-10 text-white shadow-2xl sm:px-10">
          <div class="pointer-events-none absolute -right-24 -top-24 h-64 w-64 rounded-full bg-brand-gold/15 blur-2xl"></div>
          <div class="pointer-events-none absolute -left-24 -bottom-24 h-64 w-64 rounded-full bg-white/10 blur-2xl"></div>

          <div class="relative grid gap-8 lg:grid-cols-12 lg:items-center">
            <div class="lg:col-span-8">
              <h3 class="text-2xl font-extrabold tracking-tight sm:text-3xl">
                Want to partner with MELI?
              </h3>
              <p class="mt-3 text-white/80">
                Let's discuss your staffing needs and build a compliant, reliable recruitment pipeline.
              </p>
            </div>

            <div class="lg:col-span-4 lg:flex lg:justify-end">
              <a
                href={`${BASE}contact/`}
                class="inline-flex w-full items-center justify-center rounded-2xl bg-white px-6 py-3 text-sm font-bold text-brand-navy shadow-soft transition hover:opacity-95 sm:w-auto"
              >
                Contact us
              </a>
            </div>
          </div>
        </div>
      </section>

     
    </main>
  </body>
</html>

---
import Card from "../astro/Card.astro";
import SectionHeader from "./SectionHeader.astro";
import { services } from "../../data/services.js";
import WorkflowImage from "../../images/workflow-diagram.svg";

const BASE = import.meta.env.BASE_URL;
const topServices = services.slice(0, 3);

const iconPath = (name) => {
  if (name === "document")
    return "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z";
  if (name === "shield")
    return "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z";
  if (name === "support")
    return "M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z";
  return "M13 10V3L4 14h7v7l9-11h-7z";
};
---

<section class="relative overflow-hidden py-24 md:py-32">
  <!-- Background gradient (brand-consistent) -->
  <div class="absolute inset-0 bg-gradient-to-b from-white via-slate-50 to-white"></div>

  <!-- Floating orbs (subtle, brand) -->
  <div class="pointer-events-none absolute top-0 left-1/4 h-96 w-96 rounded-full bg-gradient-to-br from-brand-gold/10 via-transparent to-transparent blur-3xl"></div>
  <div class="pointer-events-none absolute bottom-0 right-1/4 h-96 w-96 rounded-full bg-gradient-to-tr from-brand-navy/10 via-transparent to-transparent blur-3xl"></div>

  <div class="relative container mx-auto px-4">
    <!-- Header -->
    <div class="mb-20 text-center">
      <span class="inline-flex items-center gap-2 mb-6 rounded-full bg-brand-gold/10 border border-brand-gold/20 px-5 py-2.5 text-sm font-bold text-brand-gold backdrop-blur-sm">
        <span class="h-2 w-2 rounded-full bg-brand-gold shadow-[0_0_0_6px_rgba(199,160,55,0.10)]"></span>
        Our Workflow Process
      </span>

      <h2 class="text-4xl md:text-5xl lg:text-6xl font-black tracking-tight text-brand-navy mb-6">
        Strategic
        <span class="bg-gradient-to-r from-brand-navy via-slate-900 to-brand-gold bg-clip-text text-transparent">
          {" "}Service Flow
        </span>
      </h2>

      <p class="mx-auto max-w-3xl text-lg md:text-xl text-slate-600 leading-relaxed">
        A structured workflow designed for smooth progression from initial contact to successful deployment.
      </p>
    </div>

    <!-- Workflow -->
    <div class="relative">
      <!-- Central vertical line -->
      <div
        class="absolute left-1/2 top-0 bottom-0 hidden w-px -translate-x-1/2 md:block
        bg-gradient-to-b from-brand-gold/70 via-slate-200 to-brand-navy/70"
      ></div>

      <!-- Steps -->
      <div class="space-y-10 md:space-y-20">
        {/* STEP 1 */}
        <div class="relative">
          <div class="grid md:grid-cols-2 items-start gap-10 md:gap-12">
            <!-- CARD (right side on desktop) -->
            <div class="relative order-1 md:order-2 md:pl-8">
              <!-- connector line from center -->
              <div class="absolute left-0 top-12 hidden h-px w-8 md:block bg-gradient-to-r from-slate-200 to-transparent"></div>

              <!-- dot on the center line -->
              <div class="absolute left-0 top-8 hidden md:block -translate-x-1/2">
                <div class="relative">
                  <div class="absolute -inset-3 rounded-full bg-brand-gold/15 blur"></div>
                  <div class="relative h-3 w-3 rounded-full bg-brand-gold ring-4 ring-white"></div>
                </div>
              </div>

              <a href={`${BASE}services/${topServices[0].slug}/`} class="group block no-underline">
                <div
                  class="relative w-full max-w-[420px] lg:max-w-[440px] mx-auto md:mx-0
                  rounded-xl bg-white
                  border border-slate-200
                  shadow-lg
                  transition-all duration-500
                  hover:-translate-y-1 hover:shadow-xl
                  rotate-[-2.5deg] hover:rotate-[0.5deg]"
                >
                  <!-- number badge -->
                  <div class="absolute -top-3 -right-3">
                    <div class="relative">
                      <div class="absolute -inset-1 bg-brand-gold/20 rounded-lg blur"></div>
                      <div class="relative flex h-10 w-10 items-center justify-center rounded-lg bg-brand-gold text-sm font-black text-white shadow-md">
                        01
                      </div>
                    </div>
                  </div>

                  <div class="p-6">
                    <div class="mb-5 flex items-start justify-between gap-6">
                      <div>
                        <div class="inline-flex items-center rounded-full border border-brand-gold/20 bg-brand-gold/10 px-3 py-1 text-xs font-bold text-brand-gold">
                          {topServices[0].category}
                        </div>
                        <h4 class="mt-3 text-xl font-extrabold text-slate-900 group-hover:text-brand-navy transition-colors">
                          {topServices[0].title}
                        </h4>
                      </div>

                      <div class="shrink-0 rounded-lg border border-slate-200 bg-slate-50 p-3 transition-transform duration-300 group-hover:scale-110">
                        <svg class="h-6 w-6 text-brand-navy" fill="currentColor" viewBox="0 0 24 24">
                          <path d={iconPath(topServices[0].icon)} />
                        </svg>
                      </div>
                    </div>

                    <p class="text-slate-600 leading-relaxed">{topServices[0].short}</p>

                    <div class="mt-6 flex items-center justify-between border-t border-slate-100 pt-5">
                      <span class="text-sm font-bold text-brand-navy group-hover:text-brand-gold transition-colors">
                        Begin Process →
                      </span>
                    </div>
                  </div>
                </div>
              </a>
            </div>

            <!-- DESCRIPTION (left side on desktop) -->
            <div class="order-2 md:order-1 mt-8 md:mt-0 md:pr-4 md:flex md:justify-end">
              <div class="max-w-md md:text-right">
                <div class="inline-flex items-center gap-2 mb-3 rounded-full bg-slate-100 px-3 py-1.5 text-xs font-semibold text-slate-600">
                  Initial Phase
                </div>

                <h3 class="text-2xl md:text-3xl font-extrabold text-brand-navy mb-3">
                  Discovery & Assessment
                </h3>

                <p class="text-slate-600 leading-relaxed mb-5">
                  We begin with needs analysis and clear objectives so every next step is fast and aligned.
                </p>

                <ul class="space-y-2 text-sm text-slate-600 md:ml-auto md:w-fit">
                  <li class="flex items-center gap-2 md:justify-end">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-gold/70"></span>
                    Requirements gathering
                  </li>
                  <li class="flex items-center gap-2 md:justify-end">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-gold/70"></span>
                    Initial consultation
                  </li>
                  <li class="flex items-center gap-2 md:justify-end">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-gold/70"></span>
                    Timeline planning
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        {/* STEP 2 */}
        <div class="relative">
          <div class="grid md:grid-cols-2 items-start gap-10 md:gap-12">
            <!-- CARD (left side on desktop) -->
            <div class="relative order-1 md:order-1 md:pr-8 md:flex md:justify-end">
              <!-- connector line from center -->
              <div class="absolute right-0 top-12 hidden h-px w-8 md:block bg-gradient-to-l from-slate-200 to-transparent"></div>

              <!-- dot on the center line -->
              <div class="absolute right-0 top-8 hidden md:block translate-x-1/2">
                <div class="relative">
                  <div class="absolute -inset-3 rounded-full bg-brand-gold/12 blur"></div>
                  <div class="relative h-3 w-3 rounded-full bg-brand-navy ring-4 ring-white"></div>
                </div>
              </div>

              <a href={`${BASE}services/${topServices[1].slug}/`} class="group block no-underline w-full max-w-[420px] lg:max-w-[440px]">
                <div
                  class="relative w-full
                  rounded-xl bg-white
                  border border-slate-200
                  shadow-lg
                  transition-all duration-500
                  hover:-translate-y-1 hover:shadow-xl
                  rotate-[2.5deg] hover:rotate-[-0.5deg]"
                >
                  <div class="absolute -top-3 -left-3">
                    <div class="relative">
                      <div class="absolute -inset-1 bg-brand-navy/15 rounded-lg blur"></div>
                      <div class="relative flex h-10 w-10 items-center justify-center rounded-lg bg-brand-navy text-sm font-black text-white shadow-md">
                        02
                      </div>
                    </div>
                  </div>

                  <div class="p-6">
                    <div class="mb-5 flex items-start justify-between gap-6">
                      <div class="shrink-0 rounded-lg border border-slate-200 bg-slate-50 p-3 transition-transform duration-300 group-hover:scale-110">
                        <svg class="h-6 w-6 text-brand-navy" fill="currentColor" viewBox="0 0 24 24">
                          <path d={iconPath(topServices[1].icon)} />
                        </svg>
                      </div>

                      <div class="text-right">
                        <div class="inline-flex items-center rounded-full border border-brand-gold/20 bg-brand-gold/10 px-3 py-1 text-xs font-bold text-brand-gold">
                          {topServices[1].category}
                        </div>
                        <h4 class="mt-3 text-xl font-extrabold text-slate-900 group-hover:text-brand-navy transition-colors">
                          {topServices[1].title}
                        </h4>
                      </div>
                    </div>

                    <p class="text-slate-600 leading-relaxed">{topServices[1].short}</p>

                    <div class="mt-6 flex items-center justify-between border-t border-slate-100 pt-5">
                      <span class="text-sm font-bold text-brand-navy group-hover:text-brand-gold transition-colors">
                        Continue Process →
                      </span>
                    </div>
                  </div>
                </div>
              </a>
            </div>

            <!-- DESCRIPTION (right side on desktop) -->
            <div class="order-2 md:order-2 mt-8 md:mt-0 md:pl-4">
              <div class="max-w-md">
                <div class="inline-flex items-center gap-2 mb-3 rounded-full bg-slate-100 px-3 py-1.5 text-xs font-semibold text-slate-600">
                  Compliance Phase
                </div>

                <h3 class="text-2xl md:text-3xl font-extrabold text-brand-navy mb-3">
                  Verification & Documentation
                </h3>

                <p class="text-slate-600 leading-relaxed mb-5">
                  We manage regulatory steps and documentation, ensuring accuracy and audit-ready compliance.
                </p>

                <ul class="space-y-2 text-sm text-slate-600">
                  <li class="flex items-center gap-2">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-navy/70"></span>
                    Legal compliance check
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-navy/70"></span>
                    Document verification
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-navy/70"></span>
                    Audit preparation
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        {/* STEP 3 */}
        <div class="relative">
          <div class="grid md:grid-cols-2 items-start gap-10 md:gap-12">
            <!-- CARD (right side on desktop) -->
            <div class="relative order-1 md:order-2 md:pl-8">
              <!-- connector line from center -->
              <div class="absolute left-0 top-12 hidden h-px w-8 md:block bg-gradient-to-r from-slate-200 to-transparent"></div>

              <!-- dot on the center line -->
              <div class="absolute left-0 top-8 hidden md:block -translate-x-1/2">
                <div class="relative">
                  <div class="absolute -inset-3 rounded-full bg-brand-gold/12 blur"></div>
                  <div class="relative h-3 w-3 rounded-full bg-brand-gold ring-4 ring-white"></div>
                </div>
              </div>

              <a href={`${BASE}services/${topServices[2].slug}/`} class="group block no-underline">
                <div
                  class="relative w-full max-w-[420px] lg:max-w-[440px] mx-auto md:mx-0
                  rounded-xl bg-white
                  border border-slate-200
                  shadow-lg
                  transition-all duration-500
                  hover:-translate-y-1 hover:shadow-xl
                  rotate-[-2deg] hover:rotate-[0.5deg]"
                >
                  <div class="absolute -top-3 -right-3">
                    <div class="relative">
                      <div class="absolute -inset-1 bg-brand-gold/20 rounded-lg blur"></div>
                      <div class="relative flex h-10 w-10 items-center justify-center rounded-lg bg-brand-gold text-sm font-black text-white shadow-md">
                        03
                      </div>
                    </div>
                  </div>

                  <div class="p-6">
                    <div class="mb-5 flex items-start justify-between gap-6">
                      <div>
                        <div class="inline-flex items-center rounded-full border border-brand-gold/20 bg-brand-gold/10 px-3 py-1 text-xs font-bold text-brand-gold">
                          {topServices[2].category}
                        </div>
                        <h4 class="mt-3 text-xl font-extrabold text-slate-900 group-hover:text-brand-navy transition-colors">
                          {topServices[2].title}
                        </h4>
                      </div>

                      <div class="shrink-0 rounded-lg border border-slate-200 bg-slate-50 p-3 transition-transform duration-300 group-hover:scale-110">
                        <svg class="h-6 w-6 text-brand-navy" fill="currentColor" viewBox="0 0 24 24">
                          <path d={iconPath(topServices[2].icon)} />
                        </svg>
                      </div>
                    </div>

                    <p class="text-slate-600 leading-relaxed">{topServices[2].short}</p>

                    <div class="mt-6 flex items-center justify-between border-t border-slate-100 pt-5">
                      <span class="text-sm font-bold text-brand-navy group-hover:text-brand-gold transition-colors">
                        Finalize Process →
                      </span>
                    </div>
                  </div>
                </div>
              </a>
            </div>

            <!-- DESCRIPTION (left side on desktop) -->
            <div class="order-2 md:order-1 mt-8 md:mt-0 md:pr-4 md:flex md:justify-end">
              <div class="max-w-md md:text-right">
                <div class="inline-flex items-center gap-2 mb-3 rounded-full bg-slate-100 px-3 py-1.5 text-xs font-semibold text-slate-600">
                  Deployment Phase
                </div>

                <h3 class="text-2xl md:text-3xl font-extrabold text-brand-navy mb-3">
                  Support & Implementation
                </h3>

                <p class="text-slate-600 leading-relaxed mb-5">
                  We stay with you through deployment and beyond—support, follow-ups, and continuous optimization.
                </p>

                <ul class="space-y-2 text-sm text-slate-600 md:ml-auto md:w-fit">
                  <li class="flex items-center gap-2 md:justify-end">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-gold/70"></span>
                    24/7 dedicated support
                  </li>
                  <li class="flex items-center gap-2 md:justify-end">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-gold/70"></span>
                    Deployment assistance
                  </li>
                  <li class="flex items-center gap-2 md:justify-end">
                    <span class="h-1.5 w-1.5 rounded-full bg-brand-gold/70"></span>
                    Continuous optimization
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-20 text-center">
      <div class="mx-auto max-w-4xl rounded-xl bg-white/80 backdrop-blur-sm border border-slate-200 shadow-lg p-8 md:p-12">
        <h3 class="text-3xl font-extrabold text-brand-navy mb-3">Ready to Start?</h3>
        <p class="text-slate-600 max-w-2xl mx-auto mb-8">
          Join employers and candidates who successfully navigate the process with MELI's structured workflow.
        </p>

        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a
            href={`${BASE}contact/`}
            class="group rounded-lg bg-brand-navy px-8 py-4 text-lg font-bold text-white shadow-lg
              transition-all duration-300 hover:-translate-y-0.5 hover:shadow-xl"
          >
            Get Started Today
            <span class="ml-2 inline-block transition-transform duration-300 group-hover:translate-x-1">→</span>
          </a>

          <a
            href={`${BASE}services/`}
            class="rounded-lg border border-slate-300 bg-white px-8 py-4 text-lg font-bold text-brand-navy shadow-sm
              transition-all duration-300 hover:border-brand-gold/40 hover:text-brand-gold hover:shadow-md"
          >
            View All Services
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

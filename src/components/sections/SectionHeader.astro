---
const { badge, title, subtitle, tone = "light" } = Astro.props;
const badgeClass =
  tone === "light"
    ? "bg-brand-navy/5 text-brand-navy ring-brand-navy/10"
    : "bg-white/10 text-white ring-white/20";

const titleClass = tone === "light" ? "text-slate-900" : "text-white";
const subClass = tone === "light" ? "text-slate-600" : "text-white/80";
---

<div class="max-w-2xl">
  <div class={`inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-extrabold ring-1 ${badgeClass}`}>
    {badge}
  </div>

  <h2 class={`mt-4 text-2xl md:text-3xl font-extrabold tracking-tight ${titleClass}`}>
    {title}
  </h2>

  {subtitle && <p class={`mt-3 text-base md:text-lg ${subClass}`}>{subtitle}</p>}
</div>

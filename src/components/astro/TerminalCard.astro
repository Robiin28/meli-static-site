---
const { title } = Astro.props;
---

<div class="rounded-2xl bg-brand-dark text-white shadow-soft ring-1 ring-white/10">
  <div class="flex items-center gap-2 border-b border-white/10 px-4 py-3">
    <span class="h-2 w-2 rounded-full bg-red-400/80"></span>
    <span class="h-2 w-2 rounded-full bg-yellow-400/80"></span>
    <span class="h-2 w-2 rounded-full bg-green-400/80"></span>
    <div class="ml-2 font-mono text-xs text-white/70">{title}</div>
  </div>
  <div class="px-5 py-5 text-sm text-white/80">
    <slot />
  </div>
</div>

---
import Icon from "./Icon.astro";

const {
  eyebrow = "",
  title = "",
  text = "",
  icon = "",
} = Astro.props;
---

<div class="h-full rounded-2xl bg-white p-6 shadow-soft ring-1 ring-slate-200 transition hover:ring-slate-300 flex flex-col">
  <div class="flex items-start gap-4">
    {icon ? <Icon name={icon} /> : null}

    <div>
      {eyebrow ? (
        <div class="text-xs font-extrabold tracking-wide text-brand-gold">{eyebrow}</div>
      ) : null}

      {title ? (
        <h3 class="mt-1 text-lg font-extrabold text-slate-900">{title}</h3>
      ) : null}

      {text ? (
        <p class="mt-2 text-sm leading-6 text-slate-600">{text}</p>
      ) : null}
    </div>
  </div>

  <div class="mt-auto">
    <slot />
  </div>
</div>

---
const { badge = "", title = "", subtitle = "", ctaHref = "", ctaLabel = "" } = Astro.props;
---

<section class="relative overflow-hidden bg-brand-navy text-white">
  <div class="pointer-events-none absolute inset-0 opacity-[0.06]">
    <div class="absolute -top-28 left-1/2 h-80 w-80 -translate-x-1/2 rounded-full bg-white blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 py-16 md:py-20 lg:py-24 relative">
    {badge && (
      <div class="inline-flex items-center gap-2 rounded-full bg-white/10 px-4 py-1.5 text-xs font-medium uppercase tracking-wider ring-1 ring-white/20 backdrop-blur-sm">
        <span class="h-1.5 w-1.5 rounded-full bg-brand-gold"></span>
        {badge}
      </div>
    )}

    <h1 class="mt-6 max-w-4xl text-4xl font-bold leading-tight md:text-5xl lg:text-6xl">
      {title}
    </h1>

    {subtitle && (
      <p class="mt-4 max-w-2xl text-lg text-white/80 md:text-xl md:leading-relaxed">
        {subtitle}
      </p>
    )}

    {ctaHref && ctaLabel && (
      <div class="mt-8 md:mt-10">
        <a
          href={ctaHref}
          class="no-underline inline-flex items-center justify-center rounded-full bg-brand-gold px-8 py-3.5 text-base font-bold text-slate-900 shadow-lg transition-all duration-300 hover:scale-105 hover:bg-opacity-90 hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-brand-gold focus:ring-offset-2 focus:ring-offset-brand-navy"
        >
          {ctaLabel}
          <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    )}
  </div>
</section>
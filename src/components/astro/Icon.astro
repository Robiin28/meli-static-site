---
type IconName = "shield" | "headset" | "plane" | "doc" | "spark";
const { name = "spark" } = Astro.props as { name?: IconName };
---

<span
  class="
    flex h-12 w-12 aspect-square
    items-center justify-center
    rounded-full
    bg-black
    text-white
    leading-none
  "
>
  {name === "shield" && (
    <svg viewBox="0 0 24 24" fill="none" class="block h-6 w-6" aria-hidden="true">
      <path
        d="M12 3l8 4v6c0 5-3.5 8.5-8 9-4.5-.5-8-4-8-9V7l8-4z"
        stroke="currentColor"
        stroke-width="2"
      />
      <path
        d="M9 12l2 2 4-5"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
  )}

  {name === "headset" && (
    <svg viewBox="0 0 24 24" fill="none" class="block h-6 w-6" aria-hidden="true">
      <path d="M4 12a8 8 0 0 1 16 0" stroke="currentColor" stroke-width="2" />
      <path
        d="M4 12v6a2 2 0 0 0 2 2h2v-8H6a2 2 0 0 0-2 2z"
        stroke="currentColor"
        stroke-width="2"
      />
      <path
        d="M20 12v6a2 2 0 0 1-2 2h-2v-8h2a2 2 0 0 1 2 2z"
        stroke="currentColor"
        stroke-width="2"
      />
    </svg>
  )}

  {name === "plane" && (
    <svg viewBox="0 0 24 24" fill="none" class="block h-6 w-6" aria-hidden="true">
      <path
        d="M10.5 21l1.5-6 8-3-8-3-1.5-6L8 9 3 12l5 3 2.5 6z"
        stroke="currentColor"
        stroke-width="2"
        stroke-linejoin="round"
      />
    </svg>
  )}

  {name === "doc" && (
    <svg viewBox="0 0 24 24" fill="none" class="block h-6 w-6" aria-hidden="true">
      <path
        d="M7 3h7l3 3v15a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"
        stroke="currentColor"
        stroke-width="2"
      />
      <path d="M14 3v4h4" stroke="currentColor" stroke-width="2" />
      <path
        d="M8 12h8M8 16h8"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
      />
    </svg>
  )}

  {(name === "spark" || !name) && (
    <svg viewBox="0 0 24 24" fill="none" class="block h-6 w-6" aria-hidden="true">
      <path
        d="M12 2l1.2 6.2L20 10l-6.8 1.8L12 18l-1.2-6.2L4 10l6.8-1.8L12 2z"
        stroke="currentColor"
        stroke-width="2"
        stroke-linejoin="round"
      />
    </svg>
  )}
</span>

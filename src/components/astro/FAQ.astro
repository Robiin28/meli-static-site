---
const { items = [] } = Astro.props;
---

<div class="mt-10 grid gap-3">
  {items.map((it: { q: unknown; a: unknown; }) => (
    <details class="group rounded-2xl bg-white p-5 ring-1 ring-slate-200 shadow-soft">
      <summary class="cursor-pointer list-none font-bold text-slate-900">
        <span class="flex items-center justify-between gap-3">
          <span>{it.q}</span>
          <span class="text-slate-400 group-open:rotate-45 transition">+</span>
        </span>
      </summary>
      <p class="mt-3 text-sm text-slate-600">{it.a}</p>
    </details>
  ))}
</div>
